/* components/notice-item/index.wxss */

.notice{
  background-color: #fff;
  border-bottom: 1rpx solid rgba(170, 170, 170, 0.5);
}
.user{
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 200rpx;
  padding: 0 20rpx;
}

.user-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%
}

.notice-info{
  display: flex;
  flex-flow: column wrap;
  justify-content: space-between;
  height: 100rpx;
}

.notice-content{
  display:flex;
}
.user-name{
  margin-left: 20rpx;
  font-weight: 600;
}
.nocice-type{
  margin-left: 10rpx;
  color: #888;
}

.post-time{
  margin-left: 20rpx;
  font-size: small;
  color: #888;
}
