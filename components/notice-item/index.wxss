/* components/notice-item/index.wxss */

.notice{
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(170, 170, 170, 0.5);
  box-sizing: border-box;
  display: flex;
  min-height: 120rpx;
  padding:20rpx;
}

.user-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%
}
.notice-info{
  display: flex;
  flex-flow: column wrap;
  margin-left: 20rpx;
}

.user-name{
  margin-left: 20rpx;
  font-weight: 600;
}
.nocice-content{
  margin-left: 20rpx;
  color: #888;
}
.post-time{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: small;
  color: #888;
}
