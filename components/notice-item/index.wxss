/* components/notice-item/index.wxss */
.item{
  height: 400rpx;
  background-color: #fff;
  margin: 0 0 25rpx 0;
  border-radius: 15rpx;
  display: flex;
  flex-flow: column;
  padding: 20rpx ;
}
.user{
  display: flex;
  align-items: center;
}

.user-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%
}
.user-name{
  margin-left: 20rpx;
  font-weight: 600;
}

.post-time{
  margin-left: 20rpx;
  font-size: small;
  color: #888;
}
.content{
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  padding: 20rpx 10rpx;
  text-align:justify;
  font-size: 30rpx;
  min-height: 100rpx;
}